{% extends 'base.html.twig' %}

{% block body %}


<section class="contact-form-section">
    <div class="auto-container">
        <div class="contact-form">
            <div class="sec-title text-center">
                <span class="title">Contacter Votre jardin</span>
                <h2>Laissez Un Message</h2>
            </div>

            {{ form_start(form) }}
                <div class="row">


                    <div class="form-group col-lg-12 col-md-12 col-sm-12">
                        {{ form_widget(form.msg,{'attr': {'class': 'form-control'}})}}>
                    </div>

                    <div class="form-group col-lg-12 col-md-12 col-sm-12 text-center">
                        <button class="theme-btn btn-style-one" type="submit" name="submit-form">Send Message</button>
                    </div>
                </div>

            {{ form_end(form) }}
        </div>
    </div>
</section>    <ul>
    <li>
        <a href="{{ path('messages_index') }}">Back to the list</a>
    </li>
</ul>


{% endblock %}