                        {{ form_widget(form.heure,{'attr': {'class': 'form-control '}})}}
                    </div>
                    <div class="form-group" bis_skin_checked="1">
                        <label  for="exampleInputName1">Chauffeur</label>
                        {{ form_widget(form.chauffeur,{'attr': {'class': 'form-control '}})}}
                    </div>

                    <button type="submit" class="btn btn-success mr-2">Ajouter</button>
                    <a class="btn btn-light" href="{{ path('trajet_index') }}">Revenir Ã  la map</a>

                </form>
            </div>
