{% extends 'base.html.twig' %}

{% block body %}
    <h1>Liste des enfants</h1>

        <form class="navbar-search navbar-search-dark form-inline mr-3 d-none d-md-flex ml-lg-auto"  action="{{ path('enfant_index') }}" method="get" style="float: right">

            <div class="form-group mb-0">
                <div class="input-group input-group-alternative">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-search"></i></span>
                    </div>
                    <input class="form-control" placeholder="Search" type="text" name="filter">
                </div>
            </div>
        </form>





    <table id="example" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>{{ knp_pagination_sortable(enfants, 'Id', 'a.id') }}</th>
                <th{% if enfants.isSorted('a.nom') %} class="sorted"{% endif %}>
                    {{ knp_pagination_sortable(enfants, 'nom', 'a.nom') }}
                </th>
                <th{% if enfants.isSorted('a.prenom') %} class="sorted"{% endif %}>
                    {{ knp_pagination_sortable(enfants, 'prenom', 'a.prenom') }}
                </th>
                <th{% if enfants.isSorted('a.datenaiss') %} class="sorted"{% endif %}>
                    {{ knp_pagination_sortable(enfants, 'date naissance', 'a.datenaiss') }}
                </th>
                <th{% if enfants.isSorted('a.sexe') %} class="sorted"{% endif %}>
                    {{ knp_pagination_sortable(enfants, 'sexe', 'a.sexe') }}
                </th>

            </tr>
        </thead>

        <tbody>
        {% for enfant in enfants %}
            <tr>
                <td><a href="{{ path('enfant_show', { 'id': enfant.id }) }}">{{ enfant.id }}</a></td>
                <td>{{ enfant.nom }}</td>
                <td>{{ enfant.prenom }}</td>
                <td>{% if enfant.datenaiss %}{{ enfant.datenaiss|date('Y-m-d') }}{% endif %}</td>
                <td>{{ enfant.sexe }}</td>
                <td style="background: white border-box" >
                    <ul>
                        <li>
                            <a class="btn btn-dark" href="{{ path('enfant_show', { 'id': enfant.id }) }}">show</a>
                        </li>
                        <li>
                            <a class="btn btn-primary" href="{{ path('enfant_edit', { 'id': enfant.id }) }}">edit </a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


<center>
            <a class=" btn  btn-dark"  href="{{ path('enfant_new') }}"><b>Ajouter enfant</b>  </a>
</center>
    <br>


{% endblock %}
