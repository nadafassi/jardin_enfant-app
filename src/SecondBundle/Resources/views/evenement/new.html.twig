{% extends 'back.html.twig' %}
{% block nav %}
    <div class="header bg-gradient-primary pb-8 pt-5 pt-md-8">
        <div class="container-fluid">
            <h1 class="card-title align-content-center">Ajouter un événement</h1>

        </div></div>

{% endblock nav %}


{% block body %}
<center>
    <div class="col-md-6 grid-margin stretch-card" bis_skin_checked="1">
        <div class="card" bis_skin_checked="1">
            <div class="card-body" bis_skin_checked="1">


                <form class="forms-sample" method="post">
                    <div class="form-group" bis_skin_checked="1">
                        <label for="exampleInputName1">Titre</label>
                        {{ form_widget(form.titre,{'attr': {'class': 'form-control'}})}}        </div>

                    <div class="form-group" bis_skin_checked="1">

                        <label for="start"> Date </label>

                        <input class="form-control"  type="date" id="start"
                               min="2020-02-28" name="date">

                    </div>

                    <div class="form-group" bis_skin_checked="1">
                        <label for="exampleInputEmail3">Description</label>

                        {{ form_widget(form.description,{'attr': {'class': 'form-control'}})}}
                    </div>


                    <div class="form-group" bis_skin_checked="1">
                        <label for="exampleInputCity1">Categorie</label>
                        {{ form_widget(form.categorie,{'attr': {'class': 'form-control'}})}}
                    </div>




                    <div>
                        <button type="submit" value="Créer" class="btn btn-success mr-2"> Créer</button>
                        <ul>
                            <li>
                                <a href="{{ path('evenement_index') }}">Retour à la liste</a>
                            </li>
                        </ul>
                    </div>
                </form>
            </div>
        </div>
    </div>
</center>
{% endblock %}