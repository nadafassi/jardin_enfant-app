{% extends 'back.html.twig' %}
{% block nav %}
    <div class="header bg-gradient-primary pb-8 pt-5 pt-md-8">
        <div class="container-fluid">
            <center><h1>Liste des activités</h1></center>
        </div></div>
{% endblock nav %}
{% block body %}

    <center>
        <div>

        <div >
            <a href="{{ path('activite_calendrier') }}"  >Afficher le calendrier des activités

            </a>
        </div>
  </div>

        <form method="post">
            <div class="form-row" style="margin-left: 50px">
                <div class="form-group col-md-2 right" >
                    <select class="form-control " name="tri">
                        <option value="asc">Par noms A-Z</option>
                        <option value="desc">Par noms Z-A</option>
                    </select>
                </div>
                <div class="form-group col-md-1">
                    <button class="btn btn-outline-info" type="submit" >Trier</button>
                </div>
            </div>
        </form>

    <table id="example" class="table table-striped table-bordered" style="width:80%">
        <thead>
            <tr>

                <th><b>photo de l'activite</b></th>
                <th><b>Type d'activite</b></th>
                <th><b>Details</b></th>
                <th><b>Date</b></th>
                <th><b>Actions</b></th>

            </tr>
        </thead>
        <tbody>
        {% for activite in activites %}
            <tr>

                <td><img src="{{asset('images/'~activite.photo)}}" width="200" height="121"> </td>
                <td>{{ activite.typeact }}</td>
                <td>{{ activite.detailles }}</td>
                <td>{{ activite.Date|date('Y-m-d ') }}</td>

                <td>
                    <ul>
                        <li>
                            <a href="{{ path('activite_show', { 'id': activite.id }) }}">show</a>
                        </li>
                        <li>

                            <a href="{{ path('activite_edit', { 'id': activite.id }) }}">editer</a>

                        </li>


                        <li>

                                <a href="{{ path('activite_liste', { 'id': activite.id }) }}">Liste des participants</a>

                        </li>

                    </ul>
                </td>

            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>

            <div class="form-group col-lg-12 col-md-12 col-sm-12 text-center">
                <a href="{{ path('activite_new') }}"  ><button class="btn btn-outline-success" type="submit" name="submit-form">Ajouter une activité</button>

            </a></div>

        </li>

    </ul>
    </center>
{% endblock %}
